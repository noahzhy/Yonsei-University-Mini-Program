/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 

.content {
  background: white;
  display: flex;
  padding: 48rpx;
  flex-direction: column;
}

.col {
  background: white;
  display: flex;
  flex-direction: column;
}

.row {
  background: white;
  display: flex;
  flex-direction: row;
}

.row-wrap {
  background: white;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.divLine{
  background: #EDF2F5;
  height: 1rpx;
}

.search-bar {
  background: #004483;
  width: 100%;
  position: fixed;
  z-index: 999;
}

.search-input {
  font-size: 13pt;
}

.search-icon {
  width: 48rpx;
  height: 48rpx;
  position: absolute;
  right: 32rpx;
  top: 32rpx;
}

.search-bar-row {
  background: white;
  margin: 16rpx;
  padding: 20rpx 80rpx 20rpx 32rpx;
  border-radius: 20rpx;
  flex: auto;
}

.row-rank {
  background: white;
  display: flex;
  flex-direction: row;
  text-align: right;
  position: absolute;
  right: 48rpx;
}

.class-star-row {
  background: white;
  padding-top: 8rpx;
  padding-bottom: 16rpx;
  display: flex;
  flex-direction: row;
}

.class-star {
  padding-top: 8rpx;
  width:24rpx;
  height:24rpx;
  margin-right: 8rpx;
  vertical-align: bottom;
}

.class-rate-point {
  color: black;
  font-size: 12pt;
  font-weight: bold;
  margin-left: 16rpx;
}

.title-max {
  font-size: 16pt;
  font-weight: bold;
  color: black;
  padding-bottom: 16rpx;
}

.title-mini-gray {
  color: gray;
  font-size: 10pt;
  margin-top: 12rpx;
  margin-bottom: 12rpx;
}

.title-mini-black {
  color: black;
  font-size: 12pt;
  margin-top: 4rpx;
  margin-bottom: 12rpx;
}

.text-check {
  color: #004483;
  font-weight: bold;
  padding: 10rpx 20rpx;
  background: #EDF2F5;
  font-size: 12pt;
  border-radius: 32rpx;
  margin: 4rpx 16rpx 12rpx 0rpx;
}

.text-uncheck {
  color: gray;
  padding: 10rpx 20rpx;
  background: #EDF2F5;
  font-size: 12pt;
  border-radius: 32rpx;
  margin: 4rpx 16rpx 12rpx 0rpx;
}

.text-bottom {
  text-align: center;
  color: gray;
  font-size: 12pt;
}

.books-cover {
  width: 154rpx;
  height: 154rpx;
  margin: 16rpx 16rpx 0rpx 0rpx;
  border-radius: 4rpx;
}

.button-add {
  width: 100%;
  margin-top: 16rpx;
  background: #004483;
  border-radius: 48rpx;
  color: white;
}

.button {
  font-size: 12pt;
  color: white;
  text-align: center;
  height: 80rpx;
  font-weight: bold;
  padding: 0rpx 32rpx;
  margin-top: -10rpx;
  background: #004483;
  border-radius: 40rpx;
}
