.content {
  background: white;
  display: flex;
  flex-direction: column;
}

.divLine{
  background: #EDF2F5;
  height: 1rpx;
  margin-left: 48rpx;
  margin-right: 48rpx;
}

.divLine-in{
  background: #EDF2F5;
  height: 1rpx;
}

.background-pictrue {
  width: 100%;
  height: 320rpx;
  /* position: fixed;
  overflow: hidden;
  z-index: 0; */
}

.background-cover {
  width: 100%;
  height: 320rpx;
  opacity:0.15;
}

.row {
  background: white;
  padding-left: 32rpx;
  padding-right: 32rpx;
  padding-bottom: 16rpx;
  display: flex;
  flex-direction: row;
}

.col {
  background: white;
  align-items:center;
  display: flex;
  flex-direction: column;
}

.mid-five-one {
  width: 72rpx;
  height: 72rpx;
  margin-top: 32rpx;
  margin-left: 32rpx;
  margin-right: 32rpx;
}

.mid-five-font {
  text-align:center;
  font-size: 10pt;
  margin-top: -24rpx;
  margin-bottom: 16rpx;
}

.books {
  background: white;
  display: flex;
  flex-direction: column;
  padding-top: 32rpx;
  padding-left: 48rpx;
  padding-right: 48rpx;
  margin-bottom: 16rpx;
}

.books-row {
  background: white;
  display: flex;
  flex-direction: row;
}

.books-title {
  color: black;
  font-weight: bold;
  font-size: 16pt;
}

.books-title-mini {
  color: #004483;
  font-size: 10pt;
}

.books-title-more {
  width: 36rpx;
  height: 36rpx;
  font-weight: bold;
  color: #004483;
  font-size: 16pt;
}

.books-cover {
  width: 154rpx;
  height: 154rpx;
  margin-top: 16rpx;
  margin-right: 16rpx;
  border-radius: 4rpx;
}

.class-row {
  background: white;
  padding-top: 16rpx;
  padding-bottom: 8rpx;
  display: flex;
  flex-direction: row;
}

.class-col {
  background: white;
  display: flex;
  flex-direction: column;
}

.class-rec {
  background: white;
  display: flex;
  flex-direction: column;
  padding-top: 32rpx;
  padding-left: 48rpx;
  padding-right: 48rpx;
  margin-bottom: 16rpx;
}

.class-title {
  color: black;
  /* font-weight: bold; */
  font-size: 14pt;
}

.class-prof-name {
  padding-top: 6rpx;
  text-align: right;
  color: #004483;
  font-size: 11pt;
}

.class-rec-content {
  color: darkgray;
  font-size: 11pt;
}

.class-rate-point {
  color: black;
  font-size: 12pt;
  font-weight: bold;
  margin-left: 16rpx;
}

.class-star-row {
  background: white;
  padding-bottom: 16rpx;
  display: flex;
  flex-direction: row;
}

.class-star {
  padding-top: 8rpx;
  width:16px;
  height:16px;
  margin-right: 8rpx;
  vertical-align: bottom;
}